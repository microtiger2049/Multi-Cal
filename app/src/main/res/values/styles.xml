<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/material.blue.900</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="colorAccent">@color/material.blue.800</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="colorButtonNormal">@color/material.grey</item>
        <item name="android:textColor">@color/material.blue.600</item>
    </style>

    <style name="DisplayEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">bottom|end</item>
    </style>

    <style name="DisplayEditTextStyle.Formula">
        <item name="android:paddingTop">48dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="minTextSize">36sp</item>
        <item name="maxTextSize">64sp</item>
        <item name="stepTextSize">8sp</item>
    </style>

    <style name="DisplayEditTextStyle.Result">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">36sp</item>
    </style>

</resources>
