<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:statusBarColor">@color/material.blue.900</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="colorAccent">@color/material.blue.800</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="colorButtonNormal">@color/material.grey</item>
        <item name="android:textColor">@color/material.blue.600</item>
    </style>

</resources>
